pipeline {
    agent any 
    
    stages {

        stage ('Prepare Artifacts'){

            steps {
                sh '''
                zip -r ../frontend.zip *
                '''

            }
        }

        stage('Upload Artifacts'){

            steps {
                sh'''
                  curl -u admin:admin --upload-file /home/ubuntu/var/lib/jenkins/workspace/frontend.zip http://172.31.12.138:8081/repository/frontendtodo/frontend.zip
                '''
            }
        }
    }
}